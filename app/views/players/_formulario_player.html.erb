<div class="container contenido">
  <div class="row center-xs middle-xs formulario">
    <div class="col-xs-12 col-md-8 ">
      <div class="box hoverable ">
        <div class="row purple darken-4">
          <div class="col-xs-12 center-align ">
            <h3>Registro de Jugadores</h3>
          </div>
        </div>
        <%= form_for @player,:url => { :action => :create },class:"col-xs-12"  do |f|  %>
          <div class="row">
            <div class="input-field col-xs-12 ">
              <i class="material-icons prefix">account_circle</i>
              <%=f.label :name ,"Nombre",:class=>"active" %>
                <%=f.text_field :name,{value:@player.name,:class=>"validate"}%>
            </div>
          </div>
          <% if @teams.length !=0 %>
            <div class="row">
              <div class="col-xs-12">
                <%=f.label :team ,"equipos registrados",class:"active"%>
                  <%= collection_select(:team, :team_id, Team.all, :id, :name,class:"browser-default")%>
              </div>
            </div>
            <%end%>
              <div class="row">
                <div class="col-xs-12 start-xs">
                  <%= f.label :position ,"Posicion",:class=>"active" %>
                    <%= f.select :position, options_for_select(["Defensa","Arquero","Volante Derecha","volante Izquierdo","Medio"]), {}, {required: 'true', autofocus: 'true', :class=>"browser-default"}  %>

                </div>

              </div>
              <div class="row end-xs end-xs around-xs middle-xs ilike-blue-container">
                <div class="col-xs-6 last-xs">
                  <%=f.submit "enviar" ,:class=>"waves-effect waves-light btn indigo darken-4"%>
                </div>

              </div>

              <%end%>
      </div>

    </div>

  </div>